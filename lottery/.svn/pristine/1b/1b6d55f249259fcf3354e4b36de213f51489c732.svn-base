.circleBox{
    width: 140px;
    height: 140px;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 999;
    background-color: #12141e;
}
img[alt="circle"]{
    width: 138px;
    height: 138px; 
}
#arrowOne{
    width: 66px;
    height: 66px;
    background-image: url("../images/arrow-none.png");
    position: absolute;
