body{
    background-color: #12141e;
    width: 100%;
    height: 100vh;
    margin: 0;
    padding: 0;
    position: relative;
}
html{
    font-size:100px;
}
#main{
    width: 100%;
}
.animate-container{
    width: 100%;
    height:100%;
}
#waveBox{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
}
header{
      width: 1000px;
      height: 38px;
      margin: auto;
      display: flex;
      justify-content: space-between;
}
img[alt="logo"]{
    width: 98px;
    height: 36px;
    margin-top: 2px;
}
#headRight{
    display: flex;
    justify-content: space-between;
    width: 80px;
    height: 38px;
    align-items: center;
}
#headRight:hover{
    cursor: pointer;
}
#inputBox{
    width: 80px;
    height: 38px;
    font-size: 12px;
    color: white;
    line-height: 38px;
}
#guoqiBox{
    width: 20px;
    height: 20px;
    margin-right: 8px;
}
#language{
    width: 80px;
    height: 80px;
    font-size: 12px;
    color: white;
    background-color:#1f2442;
    display: none;
    z-index: 999; 
}
#LanguageBox{
    width: 80px;
    height: 38px;
    line-height: 38px;
}
#language>li{
    width: 70px;
    height: 40px;
    line-height: 40px;
    padding: 0 5px;
}
#language>li:nth-child(1){
    border-bottom: 1px solid #4d5569;
}
#language>li:nth-of-type(1)>i{
    background-image: url("../images/Singapore.png");
    width: 20px;
    height: 20px;
    display: inline-block;
    vertical-align: middle;
    margin-right: 8px;
}
#language>li:nth-of-type(2)>i{
    background-image: url("../images/guoqi02.png");
    width: 20px;
    height: 20px;
    display: inline-block;
    vertical-align: middle;
    margin-right: 8px;
}
img[alt="down"]{
    width: 20px;
    height: 20px;
    margin-right: 20px;
    display: inline-block;
}
h1{
    text-align: center;
    font-size: 60px;
    margin-top:159px;
    color: white; 
}
h1>span{
    font-weight: normal;
}
.Lottery{
    width: 420px;
    height: 155px;
    border:1px solid #ff782f;
    position: absolute;
    bottom: 33px;
    right: 30px;
}
.Lottery>p{
    margin-left: 100px;
    line-height: 30px;
}
.Lottery>p:nth-child(1){
    margin-top: 30px;
    font-size: 28px;
}
.Lottery>p:nth-child(2){
    color:#8b8c8e;
    font-size: 12px;
    /* margin-top: 20px; */
}
