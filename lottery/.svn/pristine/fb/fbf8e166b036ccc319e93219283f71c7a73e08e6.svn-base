function getAmountByPrecision(amt, precision) {
    let amtFloat = "0.0000";
    let afArr = (amt + "").split(".");
    if (afArr.length == 1) {
        amtFloat = amt + ".0000";
    } else {
        let inte = afArr[0];
        let dec = afArr[1];
        if (dec.length >= precision) {
            dec = dec.substr(0, precision);
        } else {
            let len = dec.length;
            for (let i = 0; i < (precision - len); i++) {
                dec += "0";
            }
        }
        amtFloat = inte + "." + dec;
    }
    return amtFloat;
}
